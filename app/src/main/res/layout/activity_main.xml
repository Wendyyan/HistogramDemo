<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:myChart="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <com.chinaoly.histogram.HistogramView
        android:id="@+id/histogram_view"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        myChart:topColor="@color/leftColor"
        myChart:bottomColor="@color/leftColorBottom"
        myChart:selectColor="@color/selectLeftColor"
        myChart:xyColor="@color/xyColor" />

    <com.chinaoly.histogram.DoubleHistogramView
        android:id="@+id/double_histogram_view"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        myChart:leftColor="@color/leftColor"
        myChart:leftBottomColor="@color/leftColorBottom"
        myChart:selectLeftColor="@color/selectLeftColor"
        myChart:rightColor="@color/rightColor"
        myChart:rightBottomColor="@color/rightBottomColor"
        myChart:selectRightColor="@color/selectRightColor"
        myChart:xyColor="@color/xyColor"/>

</LinearLayout>